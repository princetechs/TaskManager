<!-- _task_display.html.erb -->
<% @tasks.each do |task| %>
    <div class="border-b border-gray-300 py-4">
        <h2 class="font-semibold">
            <%= task.title %>
        </h2>
        <p>
            <%= task.description %>
                <%= inlist(task.assigned_members.map { |member| member.user.email }) %>
        </p>
        <% if can? :create, Task %>
            <%= link_to edit_team_task_path(@team, task), class: "action-icon" do %>
                <i class="fas fa-edit"></i>
                <% end %>
                    <div class="inline-block ml-2">
                        <%= button_to delete_task_assignment_team_task_path(@team, task), method: :delete,
                            class: "action-icon" , data: { confirm: 'Are you sure?' } do %>
                            <i class="fas fa-trash-alt"></i>
                            <% end %>
                    </div>
                    <% end %>
    </div>
    <% end %>