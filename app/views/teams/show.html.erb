<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
        <%= notice %>
      </p>
      <% end %>
        <div class="mx-auto md:w-2/3 w-full">
          <h1 class="text-2xl font-bold mb-4">
            <%= @team.name %>
          </h1>

          <h3 class="text-lg font-semibold">Create a Task</h3>
          <%= link_to 'New Task' , new_team_task_path(@team),
            class: "inline-block text-indigo-600 hover:text-indigo-700 mb-3" %>

            <h3 class="text-lg font-semibold">Show All Tasks</h3>
            <%= link_to "View Tasks" , team_tasks_path(@team),
              class: "inline-block text-blue-600 hover:text-blue-700 mb-3" %>

        </div>


        <!-- Actions Menu -->
        <h3 class="text-lg font-semibold">Add Member</h3>

        <div class="flex items-end mb-4">

          <!-- Add Member Form -->
          <%= form_with url: add_member_team_path(@team), method: :post, class: "mr-4" do |f| %>
            <div class="flex items-center">
              <%= f.text_field :email, placeholder: 'Enter email' ,
                class: "mr-2 rounded-md py-2 px-3 border border-gray-300 focus:outline-none focus:border-indigo-500" %>
                <%= f.submit "Add Member" ,
                  class: "bg-indigo-500 text-white rounded-md py-2 px-4 hover:bg-indigo-600 focus:outline-none focus:bg-indigo-600"
                  %>
            </div>
            <% end %>

              <!-- Actions Buttons -->
              <div class="flex space-x-4">
                <%= link_to "Edit this team" , edit_team_path(@team),
                  class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
                  <%= button_to "Destroy this team" , team_path(@team), method: :delete,
                    class: "rounded-lg py-2 px-4 bg-gray-100 font-medium" %>
                    <%= link_to "Back to teams" , teams_path,
                      class: "rounded-lg py-2 px-4 bg-gray-100 inline-block font-medium" %>
              </div>
        </div>
  </div>
</div>