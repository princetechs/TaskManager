<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Tasks for <%= @team.name %>
  </h1>

  <% @tasks.each do |task| %>
    <div class="border-b border-gray-300 py-4">
      <h2 class="font-semibold">
        <%= task.title %>
      </h2>
      <p>
        <%= task.description %>
      </p>

      <%= link_to "Edit Task" , edit_team_task_path(@team,
        task),class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>

        <div class="inline-block ml-2">
          <%= button_to "Destroy this task" , task_path(task), method: :delete,
            class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
        </div>

        <%= link_to "Back to tasks" , tasks_path,
          class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
    <% end %>
</div>