<!-- app/views/tasks/index.html.erb -->
<div class="mx-auto md:w-2/3 w-full">
  <h1 class="font-bold text-4xl">Tasks for <%= @team.name %>
  </h1>

  <% @tasks.each do |task| %>
    <div class="border-b border-gray-300 py-4">
      <h2 class="font-semibold">
        <%= task.title %>
      </h2>
      <p>
        <%= task.description %>
      </p>
    </div>
    <% end %>
</div>